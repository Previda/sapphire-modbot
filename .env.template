# Sapphire Modbot Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Discord Bot Credentials
# ============================================
# Get these from: https://discord.com/developers/applications

# Your bot token (from Bot section)
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_TOKEN=your_bot_token_here

# Your application/client ID (from General Information)
DISCORD_CLIENT_ID=your_client_id_here
CLIENT_ID=your_client_id_here

# ============================================
# OPTIONAL - Database Configuration
# ============================================
# Leave empty if not using databases

MYSQL_URL=
MONGODB_URI=

# ============================================
# OPTIONAL - Channel IDs
# ============================================
# Right-click channel in Discord â†’ Copy ID

MOD_LOG_CHANNEL_ID=
APPEALS_CHANNEL_ID=

# ============================================
# OPTIONAL - System Configuration
# ============================================

# Maximum memory usage in MB (for Raspberry Pi)
MAX_MEMORY=200

# API server port
PORT=3001

# ============================================
# OPTIONAL - Advanced Settings
# ============================================

# Enable debug logging
DEBUG=false

# Bot prefix (for legacy commands, if any)
PREFIX=!
