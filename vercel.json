{
  "version": 2,
  "name": "sapphire-modbot-dashboard",
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "src/api/dashboardAPI.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "DISCORD_TOKEN": "@discord_token",
    "CLIENT_ID": "@client_id",
    "DASHBOARD_SECRET": "@dashboard_secret"
  }
}
