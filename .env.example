# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration# Optional MongoDB connection (fallback database)
# MONGODB_URI=mongodb://localhost:27017/sapphire-bot

# Bot Configuration
NODE_ENV=production
DISABLE_DASHBOARD=true
MAX_MEMORY=400
LOG_LEVEL=info

# Webhook Logging (Optional - use /logging setup command instead)
# MOD_LOG_WEBHOOK=https://discord.com/api/webhooks/...
# JOIN_LEAVE_WEBHOOK=https://discord.com/api/webhooks/...
# MESSAGE_LOG_WEBHOOK=https://discord.com/api/webhooks/...
# VOICE_LOG_WEBHOOK=https://discord.com/api/webhooks/...

# Dashboard Configuration (Optional)
DASHBOARD_PORT=3000
DASHBOARD_SECRET=your_secret_key_here

# Optional: Discord Webhooks
PI_STATS_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Optional: Channel IDs for logging
MOD_LOG_CHANNEL_ID=
APPEALS_CHANNEL_ID=

# Pi Configuration
MAX_MEMORY=200
CPU_LIMIT=80
