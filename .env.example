# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=./firebase-service-account.json

# Database Configuration (MongoDB - Optional)
# Method 1: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sapphire-bot?retryWrites=true&w=majority

# Method 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/sapphire-bot

# Bot Configuration
NODE_ENV=production
DISABLE_DASHBOARD=false
LOG_LEVEL=info

# Dashboard Configuration (Optional)
DASHBOARD_PORT=3000
DASHBOARD_SECRET=your_secret_key_here

# Optional: Discord Webhooks
PI_STATS_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Optional: Channel IDs for logging
MOD_LOG_CHANNEL_ID=
APPEALS_CHANNEL_ID=

# Pi Configuration
MAX_MEMORY=200
CPU_LIMIT=80
